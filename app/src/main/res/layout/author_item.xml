<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:layout_marginEnd="@dimen/app_small_margin"
    android:paddingBottom="@dimen/app_margin">

    <TextView
        android:id="@+id/role_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_margin"
        android:background="@drawable/btn_try_internet"
        android:paddingStart="@dimen/app_margin"
        android:paddingEnd="@dimen/app_margin"
        android:text="@string/author_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_small_margin"
        android:inputType="none"
        android:text="Иванов Иван Иванович"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/role_author" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        app:layout_constraintEnd_toEndOf="@id/name_author"
        app:layout_constraintStart_toStartOf="@id/name_author"
        app:layout_constraintTop_toBottomOf="@id/name_author" />


</androidx.constraintlayout.widget.ConstraintLayout>