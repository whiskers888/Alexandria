<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    style="@style/settingsButtons"
    android:layout_margin="@dimen/app_margin"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/user_received_fullname"
        style="@style/normalText"
        android:text="@string/default_username"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/user_received_message"
        style="@style/normalText"
        android:text="Сообщение"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_received_fullname"/>

    <TextView
        android:id="@+id/user_themes"
        style="@style/smallText"
        android:text="Тема"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        style="@style/separator"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_received_message" />
